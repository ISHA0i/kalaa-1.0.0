# Server Configuration
PORT=3001
NODE_ENV=development

# API Base URLs
REACT_APP_API_URL=http://localhost:5001
REACT_APP_BASE_URL=http://localhost:3001

# API Endpoints
REACT_APP_PRODUCTS_API_URL=${REACT_APP_API_URL}/products
REACT_APP_ORDERS_API_URL=${REACT_APP_API_URL}/orders
REACT_APP_USERS_API_URL=${REACT_APP_API_URL}/users
REACT_APP_AUTH_API_URL=${REACT_APP_API_URL}/auth

# Feature Flags
REACT_APP_ENABLE_AUTH=true
REACT_APP_ENABLE_CACHE=true

# Security
REACT_APP_ENABLE_CSRF=true
REACT_APP_API_TIMEOUT=30000

# Performance
REACT_APP_ENABLE_PWA=false
REACT_APP_CACHE_MAX_AGE=3600

# Error Reporting
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ERROR_LOGGING_LEVEL=warn